@* BorrowHistory.cshtml *@
@model IEnumerable<LibraryManagementSystem.Models.BorrowRecord>

@{
    ViewData["Title"] = "Borrow History";
}

<h2>Borrow History</h2>

<table id="historyTable" class="table table-bordered">
    <thead>
        <tr>
            <th>Book Title</th>
            <th>Borrow Date</th>
            <th>Due Date</th>
            <th>Return Date</th>
            <th>Fine Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Book.Title</td>
                <td>@item.BorrowDate.ToShortDateString()</td>
                <td>@item.DueDate.ToShortDateString()</td>
                <td>@(item.ReturnDate.HasValue? item.ReturnDate.Value.ToShortDateString() : "Not Returned")</td>
                <td>@item.FineAmount</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#historyTable').DataTable();
        });
    </script>
}
