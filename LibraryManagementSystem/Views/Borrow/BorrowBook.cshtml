@* BorrowBook.cshtml *@
@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Borrow Book";
}

<a asp-controller="BookManagement" asp-action="IndexBook" class="btn btn-primary">View Books</a>

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <h1>Borrow Book</h1>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-success">
                <div class="card-header">
                    <h3 class="card-title">Confirm Borrow</h3>
                </div>
                <div class="card-body">
                    <p>Are you sure you want to borrow "<strong>@Model.Title</strong>"?</p>
                    <form asp-action="ConfirmBorrow" method="post">
                        <input type="hidden" name="bookId" value="@Model.BookId" />
                        <button type="submit" class="btn btn-success">Confirm Borrow</button>
                        <a asp-controller="BookManagement" asp-action="IndexBook" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
