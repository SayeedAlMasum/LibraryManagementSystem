@* BorrowBookList.cshtml *@
@model IEnumerable<LibraryManagementSystem.Models.BorrowRecord>

@{
    ViewData["Title"] = "My Borrowed Books";
}

<h2>My Borrowed Books</h2>
@* 
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
} *@

<table id="borrowedBooksTable" class="table table-bordered">
    <thead>
        <tr>
            <th>Book Title</th>
            <th>Borrow Date</th>
            <th>Due Date</th>
            <th>Return Date</th>
            <th>Fine Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Book.Title</td>
                <td>@item.BorrowDate.ToShortDateString()</td>
                <td>@item.DueDate.ToShortDateString()</td>
                <td>@(item.ReturnDate.HasValue? item.ReturnDate.Value.ToShortDateString() : "Not Returned")</td>
                <td>@item.FineAmount</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#borrowedBooksTable').DataTable();
        });
    </script>
}
