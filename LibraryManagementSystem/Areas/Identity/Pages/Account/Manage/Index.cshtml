@* /Areas/Identity/Pages/Account/Manage/Index.cshtml *@
@page
@model IndexModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4><i class="fas fa-user-circle mr-2"></i> Profile</h4>
        </div>
        <div class="card-body">
            <div class="row">

                <!-- Profile Avatar + Basic Info -->
                <div class="col-md-4 text-center border-right">
                    <i class="fas fa-user-circle fa-7x text-secondary mb-3"></i>
                    <h5>@Model.Username</h5>
                    <span class="badge badge-primary">
                        @string.Join(", ", await Model.UserManager.GetRolesAsync(await Model.UserManager.GetUserAsync(User)))
                    </span>

                    <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="mt-3">
                        <button type="submit" class="btn btn-outline-danger btn-sm">
                            <i class="fas fa-sign-out-alt mr-1"></i> Logout
                        </button>
                    </form>
                </div>


                <!-- Editable Info -->
                <div class="col-md-8">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Username">Email</label>
                            <input asp-for="Username" class="form-control" disabled />
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.PhoneNumber">Phone Number</label>
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save mr-1"></i> Save Changes
                            </button>
                            <a asp-page="./ChangePassword" class="btn btn-warning">
                                <i class="fas fa-key mr-1"></i> Change Password
                            </a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
